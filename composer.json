{
    "name": "yiisoft/yii2-elasticsearch",
    "description": "Elasticsearch integration and ActiveRecord for the Yii framework",
    "keywords": ["yii2", "elasticsearch", "active-record", "search", "fulltext"],
    "type": "yii2-extension",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/yii2-elasticsearch/issues",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "ircs://irc.libera.chat:6697/yii",
        "source": "https://github.com/yiisoft/yii2-elasticsearch"
    },
    "authors": [
        {
            "name": "Carsten Brandt",
            "email": "mail@cebe.cc"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "yiisoft/yii2": "~2.0.54"
    },
    "require-dev": {
        "yiisoft/yii2-coding-standards": "~3.0",
        "yiisoft/yii2-debug": "^2.0",
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "yii\\elasticsearch\\": "src"
        }
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    },
    "repositories": [
       {
           "type": "composer",
           "url": "https://asset-packagist.org"
       }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
